public class CaramelSyrup extends CoffeeDecorator {

    public CaramelSyrup(Coffee coffee) {
        super(coffee);
    }

    @Override
    public String getDescription() {
        return super.getDescription() + ", Caramel Syrup";
    }

    @Override
    public double getCost() {
        return super.getCost() + 40.00;
    }
}